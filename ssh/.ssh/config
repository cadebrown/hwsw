Host *
    # use SSH multiplexing: https://en.wikibooks.org/wiki/OpenSSH/Cookbook/Multiplexing
    ControlPath ~/.ssh/controls-%r@%h:%p
    ControlMaster auto
    ControlPersist 600

    IgnoreUnknown UseKeychain
    AddKeysToAgent yes
    UseKeychain yes

    # use SSH keepalive, helps with VPNs dropping connections
    ServerAliveInterval 60
    ServerAliveCountMax 3

    # always forward SSH forwarding, so hops work easily
    ForwardAgent yes
